<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rui.pro1.modules.sys.mapper.SysLogMapper">
  <resultMap id="BaseResultMap" type="com.rui.pro1.modules.sys.entity.SysLog">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="title" jdbcType="VARCHAR" property="title" />
    <result column="type" jdbcType="CHAR" property="type" />
    <result column="ip" jdbcType="VARCHAR" property="ip" />
    <result column="method" jdbcType="VARCHAR" property="method" />
    <result column="uri" jdbcType="VARCHAR" property="uri" />
    <result column="agent" jdbcType="VARCHAR" property="agent" />
    <result column="create_by_id" jdbcType="INTEGER" property="createById" />
    <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
    <result column="remake" jdbcType="VARCHAR" property="remake" />
    <result column="end_time" jdbcType="TIMESTAMP" property="endTime" />
    <result column="result" jdbcType="VARCHAR" property="result" />
  </resultMap>

  <sql id="Base_Column_List">
    id, title, type, ip, method, uri, agent, create_by_id, create_time, remake, end_time, 
    result
  </sql>
  	<!-- 搜索条件判断 -->
	<sql id="searchField">
		<where>
			<if test="bean.uri != null and bean.uri != ''">uri  LIKE CONCAT('%',#{bean.uri},'%') </if>
			<if test="bean.title != null and bean.title != ''"> and title  LIKE CONCAT('%',#{bean.title},'%')</if>
			<if test="bean.createTime != null and bean.createTime != ''"> and  create_time=#{bean.createTime}</if>
			<if test="bean.createById != null and bean.createById != ''"> and  create_by_id=#{bean.createById}</if>
		</where>
	</sql>
	<!--=========================查询搜索 ============================================================================= -->
	<select id="queryPages" parameterType="com.rui.pro1.common.bean.page.Query"
		resultMap="BaseResultMap">
		select * from sys_log
		<include refid="searchField" />
		order by id asc
		LIMIT
		#{startRow},#{pageSize}
	</select>


	<select id="getCount" resultType="long"
		parameterType="com.rui.pro1.common.bean.page.Query">
		select count(*) from sys_log
		<include refid="searchField" />
	</select>

 
</mapper>